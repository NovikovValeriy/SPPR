@model ListDemo
@{

    ViewBag.Title = "Index";
}


<div class="border-bottom">
    <h1>@ViewData["Message"]</h1>
    <h2>Список</h2>
    <ol type="A">
        @{
            for (int i = 1; i < 6; i++)
            {
                <li>Элемент списка @i</li>
            }
        }
    </ol>
</div>


<h1>@Model.Name</h1>


<h2>Форма</h2>
<form method="post">
    <div class="container">

        <div class="col offset-2">
            <select asp-items="@ViewData["Items"] as SelectList" class="form-select" name="itemsSelect">
                @* <option>Select option</option> *@
            </select>
        </div>

        <div class="col offset-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkbox1" name="checkbox1">
                <label class="form-check-label" for="autoSizingCheck">
                    Чек-бокс 1
                </label>
            </div>
        </div>
        <div class="col offset-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkbox2" name="checkbox2">
                <label class="form-check-label" for="autoSizingCheck">
                    Чек-бокс 2
                </label>
            </div>
        </div>

        <div class="container col offset-2">
            <div class="row">
                <div class="form-check col-auto">
                    <input class="form-check-input" type="radio" name="radios" id="radio1" value="option1" checked>
                    <label class="form-check-label" for="radio1">
                        Радио-1
                    </label>
                </div>

                <div class="form-check col-auto">
                    <input class="form-check-input" type="radio" name="radios" id="radio2" value="option2">
                    <label class="form-check-label" for="radio2">
                        Радио-2
                    </label>
                </div>

                <div class="form-check col-auto">
                    <input class="form-check-input" type="radio" name="radios" id="radio3" value="option3">
                    <label class="form-check-label" for="radio3">
                        Радио-3
                    </label>
                </div>
            </div>
        </div>

        <div class="row">
            <label for="loginInput" class="col-2">Логин:</label>
            <div class="col">
                <input type="email" class="form-control" id="loginInput" placeholder="Введите имя" name="loginInput">
            </div>
        </div>
        <div class="row">
            <label for="passwordInput" class="col-2">Пароль:</label>
            <div class="col">
                <input type="password" class="form-control" id="passwordInput" placeholder="Введите пароль" name="passwordInput">
            </div>
        </div>

        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-primary">Отправить</button>
            </div>
        </div>
    </div>
</form>
