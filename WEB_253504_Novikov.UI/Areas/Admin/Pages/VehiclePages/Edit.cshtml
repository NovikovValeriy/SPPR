                <label asp-for="Vehicle.ImageMime" class="control-label"></label>
                <input asp-for="Vehicle.ImageMime" class="form-control" />
                <span asp-validation-for="Vehicle.ImageMime" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

